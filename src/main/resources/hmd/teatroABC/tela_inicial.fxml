<VBox fx:id="rootBox" alignment="CENTER_LEFT" spacing="5.0" stylesheets="@../../styles/tela_inicial.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hmd.teatroABC.controller.TelaInicialController">
     <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" />
     </padding>
   <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
      <children>
         <ImageView fitHeight="72.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../images/teatro_abc_branco.png" />
            </image>
         </ImageView>
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="imprimirBotao" mnemonicParsing="false" onAction="#imprimirIngressoTrigger" styleClass="top-button" text="Imprimir Ingresso" />
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="estatisticasBotao" mnemonicParsing="false" onAction="#verEstatisticasTrigger" styleClass="top-button" text="Estatísticas" />
      </children>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </HBox>
     <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
      <Label text="PROGRAMAÇÃO:">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
         <HBox fx:id="postersBox" alignment="CENTER" spacing="25.0" VBox.vgrow="SOMETIMES">
             <ToggleButton fx:id="peca1Botao" mnemonicParsing="false" onAction="#pecaSelecionada" HBox.hgrow="ALWAYS">
                 <graphic>
                     <ImageView fx:id="imagem1" fitHeight="400.0" pickOnBounds="true" preserveRatio="true">
                         <viewport>
                             <Rectangle2D />
                         </viewport>
                     </ImageView>
                 </graphic>
                 <toggleGroup>
                     <ToggleGroup fx:id="pecaSelecionada" />
                 </toggleGroup>
             </ToggleButton>
             <ToggleButton fx:id="peca2Botao" mnemonicParsing="false" onAction="#pecaSelecionada" toggleGroup="$pecaSelecionada" HBox.hgrow="ALWAYS">
                 <graphic>
                     <ImageView fx:id="imagem2" fitHeight="400.0" pickOnBounds="true" preserveRatio="true">
                            <!--                        <Image url="@../../images/placeholder_poster.jpg"/>-->
                        </ImageView>
                 </graphic>
             </ToggleButton>
             <ToggleButton fx:id="peca3Botao" mnemonicParsing="false" onAction="#pecaSelecionada" toggleGroup="$pecaSelecionada" HBox.hgrow="ALWAYS">
                 <graphic>
                     <ImageView fx:id="imagem3" fitHeight="400.0" pickOnBounds="true" preserveRatio="true">
                            <!--                        <Image url="@../../images/placeholder_poster.jpg"/>-->
                        </ImageView>
                 </graphic>
             </ToggleButton>
         </HBox>
         <HBox fx:id="botoesBox" alignment="CENTER" spacing="15.0">
             <Button fx:id="botaoManha" mnemonicParsing="false" onAction="#comprarIngressoTrigger" text="Manhã" HBox.hgrow="SOMETIMES">
                 <font>
                     <Font size="14.0" />
                 </font>
             </Button>
   <!--                <Button fx:id="botaoManha" mnemonicParsing="false" onAction="#comprarIngressoTrigger" text="%sessao.manha"-->
   <!--                        HBox.hgrow="SOMETIMES">-->
   <!--                    <font>-->
