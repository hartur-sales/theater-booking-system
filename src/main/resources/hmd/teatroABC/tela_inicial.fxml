   <!--                    </font>-->
   <!--                </Button>-->
             <Button fx:id="botaoTarde" mnemonicParsing="false" onAction="#comprarIngressoTrigger" text="Tarde" HBox.hgrow="SOMETIMES">
                 <font>
                     <Font size="14.0" />
                 </font>
             </Button>
   <!--                <Button fx:id="botaoTarde" mnemonicParsing="false" onAction="#comprarIngressoTrigger" text="%sessao.tarde"-->
   <!--                        HBox.hgrow="SOMETIMES">-->
