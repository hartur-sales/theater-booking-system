<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../../styles/estatisticas_tela.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hmd.teatroABC.controller.TelaEstatisticasController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="top-bar" BorderPane.alignment="CENTER">
            <ImageView fitHeight="72.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../images/teatro_abc_branco_cortado.png"/>
            </ImageView>
            <Button fx:id="voltarBotao" mnemonicParsing="false" onAction="#telaInicialTrigger"
                    styleClass="botao-voltar">
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../images/voltar.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Label styleClass="label-titulo" text="Estatísticas de Venda"/>
            <HBox HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label text="Filtrar por:"/>
                <ComboBox fx:id="filtroPecaCombo" promptText="Peça" styleClass="combo-filtro"/>
                <ComboBox fx:id="filtroSessaoCombo" promptText="Sessão" styleClass="combo-filtro"/>
                <ComboBox fx:id="filtroAreaCombo" promptText="Área" styleClass="combo-filtro"/>
                <Button fx:id="aplicarFiltrosBotao" onAction="#aplicarFiltro" styleClass="botao-filtro"
                        text="Aplicar"/>
                <Button fx:id="limparFiltrosBotao" onAction="#limparFiltro" styleClass="botao-filtro"
                        text="Limpar"/>
            </HBox>
            <FlowPane columnHalignment="CENTER" hgap="10.0" vgap="10.0">
                <VBox fx:id="visaoGeralCard" alignment="CENTER" spacing="10.0" styleClass="card">
                    <Label styleClass="campo-label" text="Visão geral">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <VBox spacing="5.0">
                        <Label fx:id="totalVendasLabel" text="Total de Vendas:"/>
                        <Label fx:id="pecaMaisVendidaLabel" text="Peça com mais ingressos vendidos:"/>
                        <Label fx:id="pecaMenosVendidaLabel" text="Peça com menos ingressos vendidos:"/>
                        <Label fx:id="sessaoMaisOcupadaLabel" text="Sessão com maior ocupação:"/>
                        <Label fx:id="sessaoMenosOcupadaLabel" text="Sessão com menor ocupação: "/>
                    </VBox>
                </VBox>
                <VBox fx:id="peca1Card" alignment="CENTER" layoutX="25.0" layoutY="25.0" spacing="10.0"
                      styleClass="card">
                    <Label styleClass="campo-label" text="Peça 1 (Wicked)">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <VBox spacing="5.0">
                        <Label fx:id="ingressosPeca1" text="Total de ingressos vendidos na peça 1:"/>
                        <Label fx:id="lucroMedioLabel1" text="Lucro médio da peça 1: R$"/>
                        <Label fx:id="receitaTotalLabel1" text="Receita total da peça 1: R$"/>
                        <Label fx:id="sessaoMais1Label" text="Sessão mais lucrativa da peça 1:"/>
                        <Label fx:id="sessaoMenos1Label" text="Sessão menos lucrativa da peça 1:"/>
                    </VBox>
                </VBox>
                <VBox fx:id="peca2Card" alignment="CENTER" layoutX="25.0" layoutY="224.0" spacing="10.0"
                      styleClass="card">
                    <Label styleClass="campo-label" text="Peça 2 (Rei Leão)">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <VBox spacing="5.0">
                        <Label fx:id="ingressosPeca2" text="Total de ingressos vendidos na peça 2:"/>
                        <Label fx:id="lucroMedioLabel2" text="Lucro médio da peça 2: R$"/>
                        <Label fx:id="receitaTotalLabel2" text="Receita total da peça 2: R$"/>
                        <Label fx:id="sessaoMais2Label" text="Sessão mais lucrativa da peça 2:"/>
                        <Label fx:id="sessaoMenos2Label" text="Sessão menos lucrativa da peça 2:"/>
                    </VBox>
                </VBox>
                <VBox fx:id="peca3Card" alignment="CENTER" layoutX="25.0" layoutY="422.0" spacing="10.0"
                      styleClass="card">
                    <Label styleClass="campo-label" text="Peça 3 (Auto da Compadecida)">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <VBox spacing="5.0">
                        <Label fx:id="ingressosPeca3" text="Total de ingressos vendidos na peça 3:"/>
                        <Label fx:id="lucroMedioLabel3" text="Lucro médio da peça 3: R$"/>
                        <Label fx:id="receitaTotalLabel3" text="Receita total da peça 3: R$"/>
                        <Label fx:id="sessaoMais3Label" text="Sessão mais lucrativa da peça 3:"/>
                        <Label fx:id="sessaoMenos3Label" text="Sessão menos lucrativa da peça 3:"/>
                    </VBox>
                </VBox>
                <VBox fx:id="areasCard" alignment="CENTER" layoutX="25.0" layoutY="620.0" spacing="10.0"
                      styleClass="card">
                    <Label styleClass="campo-label" text="Áreas">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <VBox spacing="5.0">
                        <Label fx:id="receitaMediaPlateiaA" text="Receita média da Plateia A: R$"/>
                        <Label fx:id="receitaMediaPlateiaB" text="Receita média da Plateia B: R$"/>
                        <Label fx:id="receitaMediaFrisa" text="Receita média da Frisa: R$"/>
                        <Label fx:id="receitaMediaCamarote" text="Receita média do Camarote: R$"/>
                        <Label fx:id="receitaMediaBalcao" text="Receita média do Balcão Nobre: R$"/>
                    </VBox>
                </VBox>
            </FlowPane>
            <HBox spacing="10.0">
                <Button fx:id="botaoExportar" mnemonicParsing="false" onAction="#exportarCsv"
                        styleClass="botao-exportar" text="Exportar para CSV"/>
                <Button fx:id="botaoGrafico" layoutX="25.0" layoutY="10.0" mnemonicParsing="false"
                        onAction="#abrirGrafico" styleClass="botao-exportar" text="Gerar gráficos"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
